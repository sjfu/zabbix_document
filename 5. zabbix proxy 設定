vim /etc/zabbix/zabbix_proxy.conf
  ProxyMode=1
  Server=zabbix server 主機IP
  ServerPort=10051
  Hostname=zabbix proxy 主機IP
  ListenPort=10051
  SourceIP=zabbix proxy 主機IP
  LogFile=/var/log/zabbix/zabbix_proxy.log
  LogFileSize=0
  PidFile=/var/run/zabbix/zabbix_proxy.pid
  DBHost=localhost
  DBName=zabbix_proxy
  DBUser=zabbix
  DBPassword=zabbix
  DBSocket=/var/lib/mysql/mysql.sock
  DBPort=3306
  ProxyLocalBuffer=0
  ProxyOfflineBuffer=1
  ConfigFrequency=3600
  DataSenderFrequency=10
  StartPollers=5
  StartPollersUnreachable=1
  StartTrappers=5
  StartPingers=1
  CacheSize=16M
  Timeout=15
  TrapperTimeout=30
  ExternalScripts=/usr/lib/zabbix/externalscripts
  FpingLocation=/usr/sbin/fping
